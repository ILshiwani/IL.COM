<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"  xmlns:granite="http://www.adobe.com/jcr/granite/1.0"  xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Team-Section"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <images
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./images">
                            <items jcr:primaryType="nt:unstructured">
                                <imageText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                    <items jcr:primaryType="nt:unstructured">

                                        <heading
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Heading"
                                            name="heading"/>
                                        <para
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="The maximum length for this field is 85"
                                                fieldLabel="Paragraph"
                                                name="para"
                                                removeSingleParagraphContainer="{Boolean}true"
                                                useFixedInlineToolbar="{Boolean}true"
                                                validation="rte-validate">
                                            <rtePlugins
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/pnb-metlife-market-core/components/utility/rteSimplePluginsTouch/rtePlugins"/>
                                            <uiSettings
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/pnb-metlife-market-core/components/utility/rteSimplePluginsTouch/uiSettings"/>
                                            <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-rte-required="true"/>
                                        </para>
                                        <pngimage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Png Image"
                                            name="pngImage"/>
                                        <scriptImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Script Image"
                                            name="scriptImage"/>
                                        <cardAlignment
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Card Alignment"
                                                name="cardAlignment">
                                                <items
                                                    jcr:primaryType="nt:unstructured">
                                                    <rightAligment
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right Alignment"
                                                        value="mac-delivery"/>
                                                    <leftAligment
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Left Alignment"
                                                            value="mac-delivery-1"/>
                                                </items>
                                        </cardAlignment>
                                        <link
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Link URL"
                                                name="link"/>
                                        <openInNewtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Open In Newtab"
                                                name="openInNewtab">
                                            <items
                                                    jcr:primaryType="nt:unstructured">

                                            <OpenInNewTab
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Open In New Tab?"
                                                    value="_blank"/>
                                            <OpenInSameTab
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Open In Same Tab?"
                                                    value="_self"/>
                                            </items>

                                        </openInNewtab>

                                    </items>
                                </imageText>
                            </items>
                        </field>
                    </images>
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Title"
                        name="./title"/>
                    <subtitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Subtitle"
                        name="./subtitle"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
