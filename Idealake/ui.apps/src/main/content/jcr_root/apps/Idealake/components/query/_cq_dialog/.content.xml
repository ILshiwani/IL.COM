<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="CTA banner"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Card Title"
                        name="./title"/>
                    <compName
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Company Name"
                            name="./compName"/>
                    <compAdd
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                            fieldLabel="Company Address"
                            name="./compAdd"/>
                    <location
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldLabel="Google Maps Location URL"
                            name="./location"/>
                    <highlight
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            composite="{Boolean}true"
                            fieldLabel="Emails List">
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                name="./emailLink">
                            <items jcr:primaryType="nt:unstructured">
                                <leftSectionItem
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                    <items jcr:primaryType="nt:unstructured">
                                        <emailName
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Email Display Name"
                                                name="./emailName"/>
                                        <email
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Email Link"
                                                name="./email"/>
                                    </items>
                                </leftSectionItem>
                            </items>
                        </field>
                    </highlight>
                    <highlight1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            composite="{Boolean}true"
                            fieldLabel="Social Links">
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                name="./social">
                            <items jcr:primaryType="nt:unstructured">
                                <leftSectionItem
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                    <items jcr:primaryType="nt:unstructured">
                                        <socialURL
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Enter Social URL"
                                                name="./socialURL"/>
                                    <iconType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Choose Icon Type."
                                            name="./iconType">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linked-in
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Linkedin"
                                                    value="linked-in"/>
                                            <insta
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Instagram"
                                                    value="insta"/>
                                            <facebook
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Facebook"
                                                    value="facebook"/>
                                        </items>
                                    </iconType>
                                    </items>
                                </leftSectionItem>
                            </items>
                        </field>
                    </highlight1>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
