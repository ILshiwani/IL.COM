<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Testimonials"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="title"
                                        fieldDescription="Enter the About Partner's title"
                                        fieldLabel="title"
                                        name="./title"/>
                                    <initialDesc
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldDescription="A description to display Just after about partner's title"
                                        fieldLabel="Initial Description"
                                        name="./initialDesc"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="/apps/giga/components/commons/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="/apps/giga/components/commons/uiSettings"/>
                                    </initialDesc>
                                    <listHeading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldDescription="Enter the Description to display just before resources list"
                                        fieldLabel="List Heading"
                                        name="./listHeading"/>
                                    <resourceItems
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Author the Resources Item"
                                        fieldLabel="Add Resource Item"
                                        name="./resourceItems">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./resourceItems">
                                            <items jcr:primaryType="nt:unstructured">
                                                <title
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter the resources Item Title"
                                                    fieldLabel="Resources Item Title"
                                                    name="./title"/>
                                                <icon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Select Resource Icon"
                                                    fieldLabel="icon"
                                                    name="./icon">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <one
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Videos"
                                                            value="videos"/>
                                                        <two
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Photos"
                                                            value="photos"/>
                                                        <three
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Links"
                                                            value="links"/>
                                                        <four
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Storyline"
                                                            value="storyline"/>
                                                    </items>
                                                </icon>
                                            </items>
                                        </field>
                                    </resourceItems>
                                    <finalDesc
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldDescription="A description to display after resources list "
                                        fieldLabel="Final Description"
                                        name="./finalDesc"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="/apps/giga/components/commons/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="/apps/giga/components/commons/uiSettings"/>
                                    </finalDesc>
                                </items>
                            </column>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
